<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Event Registration</title>
    <link rel="stylesheet" href="css/event-registration.css" />
  </head>

  <body>
    <div class="form_wrapper">
      <div class="form_container">
        <div class="title_container">
          <h2>Event Registration</h2>
        </div>
        <div class="row clearfix">
          <div class="">
            <form method="post" action="/events">
              <div class="input_field">
                <span><i aria-hidden="true" class="fa fa-envelope"></i></span>
                <input
                  type="text"
                  name="event_name"
                  placeholder="Event Name"
                  required
                />
              </div>
              <div class="input_field">
                <span><i aria-hidden="true" class="fa fa-lock"></i></span>
                <input
                  type="text"
                  name="event_desc"
                  placeholder="Event Description"
                  required
                />
              </div>
              <div class="input_field">
                <span><i aria-hidden="true" class="fa fa-lock"></i></span>
                <input
                  type="text"
                  name="organizer"
                  placeholder="Organizer Name"
                  required
                />
              </div>
              <div class="input_field">
                <span><i aria-hidden="true" class="fa fa-lock"></i></span>
                <input
                  type="text"
                  name="event_location"
                  placeholder="Location"
                  required
                />
              </div>
              <div class="row clearfix">
                <div class="col_half">
                  <div class="input_field">
                    <span
                      ><i aria-hidden="true" class="fa fa-user"
                        >Start Date</i
                      ></span
                    >
                  </div>
                </div>
                <div class="col_half">
                  <div class="input_field">
                    <span
                      ><i aria-hidden="true" class="fa fa-user"></i>End</span
                    >
                  </div>
                </div>
                <div class="col_half">
                  <div class="input_field">
                    <!-- <span><i aria-hidden="true" class="fa fa-user"></i></span> -->
                    <input
                      type="date"
                      name="start_date"
                      placeholder="Start Date"
                    />
                  </div>
                </div>
                <div class="col_half">
                  <div class="input_field">
                    <!-- <span><i aria-hidden="true" class="fa fa-user"></i></span> -->
                    <input
                      type="date"
                      name="end_date"
                      placeholder="End Date"
                      required
                    />
                  </div>
                </div>
              </div>
              <input
                class="eventregisterd"
                type="submit"
                onclick="registerEvent"
                value="Register"
              />
            </form>
          </div>
        </div>
      </div>
    </div>
    <p class="credit">
      <!-- Developed by
      <a href="http://www.designtheway.com" target="_blank">Design the way</a> -->
    </p>
  </body>

  <script>
    function registerEvent(e) {
      e.preventDefault();
      console.log($(form).serializeArray());
    }
  </script>
</html>
