<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0"
    />
    <meta name="description" content="" />
    <meta name="author" content="Team 15 @DAIICT - Web Development" />
    <link rel="shortcut icon" href="#" type="image/png" />

    <title>Manage Services</title>

    <!--data table-->
    <link
      rel="stylesheet"
      href="/non-visitor/js/data-tables/DT_bootstrap.css"
    />

    <link href="/non-visitor/css/style.css" rel="stylesheet" />
    <link href="/non-visitor/css/style-responsive.css" rel="stylesheet" />
  </head>

  <body class="sticky-header">
    <section>
      <%- include('./partials/sidebar'); %>

      <!-- main content start-->
      <div class="main-content">
        <%- include('./partials/header'); %>

        <!-- page heading start-->
        <div class="page-heading">
          <h3>Manage Services</h3>
          <ul class="breadcrumb">
            <li>
              <a href="#">Dashboard</a>
            </li>
            <li>
              <a href="#">Services</a>
            </li>
            <li class="active">Manage Services</li>
          </ul>
        </div>
        <!-- page heading end-->

        <%= console.log(all_services); %>
        <!--body wrapper start-->
        <div class="wrapper">
          <div class="row">
            <div class="col-sm-12">
              <section class="panel">
                <header class="panel-heading">
                  Manage Services
                  <span class="tools pull-right">
                    <a href="javascript:;" class="fa fa-chevron-down"></a>
                    <a href="javascript:;" class="fa fa-times"></a>
                  </span>
                </header>
                <div class="panel-body">
                  <div class="adv-table editable-table">
                    <div class="clearfix">
                      <div class="btn-group">
                        <a
                          id=""
                          class="btn btn-primary"
                          href="manage-services/add-service"
                        >
                          Add New <i class="fa fa-plus"></i>
                        </a>
                      </div>
                    </div>
                    <div class="space15"></div>
                    <table
                      class="table table-striped table-hover table-bordered"
                      id="editable-sample"
                    >
                      <thead>
                        <tr>
                          <th>Service Name</th>
                          <th>Description</th>
                          <th>Block</th>
                          <th>Floor</th>
                          <th>Edit</th>
                          <th>Delete</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if(all_services.length!=0) { for(var i=0; i <
                        all_services.length; i++) { %>
                        <tr class="">
                          <td><%= all_services[i].service_name %></td>
                          <td><%= all_services[i].description %></td>
                          <td><%= all_services[i].block %></td>
                          <td><%= all_services[i].floor %></td>
                      
                          <td>
                            <a
                              class=""
                              href="manage-services/edit-service/<%= all_services[i]._id %>"
                              >Edit</a
                            >
                          </td>
                          <td>
                            <a
                              class=""
                              href="/services/delete-service/<%= all_services[i]._id %>"
                              >Delete</a
                            >
                          </td>
                        </tr>
                        <% } } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </section>
            </div>
          </div>
        </div>
        <!--body wrapper end-->

        <!--footer section start-->
        <footer>2021 &copy; Mall Guide by Team 15</footer>
        <!--footer section end-->
      </div>
      <!-- main content end-->
    </section>

    <!-- Placed js at the end of the document so the pages load faster -->
    <script src="/non-visitor/js/jquery-1.10.2.min.js"></script>
    <script src="/non-visitor/js/jquery-ui-1.9.2.custom.min.js"></script>
    <script src="/non-visitor/js/jquery-migrate-1.2.1.min.js"></script>
    <script src="/non-visitor/js/bootstrap.min.js"></script>
    <script src="/non-visitor/js/modernizr.min.js"></script>
    <script src="/non-visitor/js/jquery.nicescroll.js"></script>

    <!--data table-->
    <script
      type="text/javascript"
      src="/non-visitor/js/data-tables/jquery.dataTables.js"
    ></script>
    <script
      type="text/javascript"
      src="/non-visitor/js/data-tables/DT_bootstrap.js"
    ></script>

    <!--common scripts for all pages-->
    <script src="/non-visitor/js/scripts.js"></script>

    <!--script for Manage Services-->
    <script src="/non-visitor/js/editable-table.js"></script>

    <!-- END JAVASCRIPTS -->
    <script>
      jQuery(document).ready(function () {
        EditableTable.init();
      });
    </script>
  </body>
</html>
