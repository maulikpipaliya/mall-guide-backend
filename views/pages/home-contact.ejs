<section class="page-section" id="contact">
  <div class="container">
    <div class="text-center">
      <h2 class="section-heading text-uppercase">Contact and Feedback</h2>
      <h3 class="section-subheading" style="color: rgba(255, 255, 255, 0.7)">
        In case of any queries drop us a message over here
      </h3>
      <h3 class="section-subheading" style="color: rgba(255, 255, 255, 0.7)">
        Also, please drop in your feedback, everytime you visit us. Your
        valuable feedbacks are necessary for us!
      </h3>
    </div>
    <form id="contactForm" name="sentMessage" method="POST" action="/feedbacks">
      <div class="row align-items-stretch mb-5">
        <div class="col-md-6">
          <div class="form-group">
            <input
              class="form-control"
              name="givenby"
              type="text"
              placeholder="Your Name *"
              required="required"
              data-validation-required-message="Please enter your name."
            />
            <p class="help-block text-danger"></p>
          </div>
          <div class="form-group">
            <input
              class="form-control"
              id="email"
              type="text"
              placeholder="Your Email *"
              required="required"
              data-validation-required-message="Please enter your email address."
            />
            <p class="help-block text-danger"></p>
          </div>
          <div class="form-group mb-md-0">
            <input
              class="form-control"
              id="phone"
              type="text"
              placeholder="Your Phone *"
              required="required"
              data-validation-required-message="Please enter your phone number."
            />
            <p class="help-block text-danger"></p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group form-group-textarea mb-md-0">
            <textarea
              class="form-control"
              id="message"
              name="text"
              placeholder="Your Message *"
              required="required"
              data-validation-required-message="Please enter a message."
            ></textarea>
            <p class="help-block text-danger"></p>
          </div>
        </div>
      </div>
      <div class="text-center">
        <div id="success"></div>
        <input
          class="btn btn-primary btn-xl text-uppercase"
          id="sendMessageButton"
          type="submit"
          value="Send Message"
        />
      </div>
    </form>
  </div>
</section>
<script>
